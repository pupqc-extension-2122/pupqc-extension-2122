<%# ***** Style ***** %>

<%# Select2 %>
<link rel="stylesheet" href="<%=BASE_URL%>/plugins/select2/css/select2.min.css">
<%# Daterange Picker %>
<link rel="stylesheet" href="<%=BASE_URL%>/plugins/daterangepicker/daterangepicker.css">
<%# BS Stepper %>
<link rel="stylesheet" href="<%=BASE_URL%>/plugins/bs-stepper/css/bs-stepper.min.css">



<%# ***** Body ***** %>

<%# Content Header Loader %>
<%- include('../../partials/loaders/content_header') %>

<%# Content Header %>
<div class="content-header" id="contentHeader" style="display: none">
  <div class="container-fluid">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="<%=BASE_URL%>/p">Projects</a></li>
      <li class="breadcrumb-item"><a href="<%=BASE_URL%>/p/proposals">Project Proposals</a></li>
      <li class="breadcrumb-item active">Create a proposal</li>
    </ol>
    <div class="d-flex align-items-center justify-content-between">
      <div>
        <h1 class="m-0">Create a proposal</h1>
      </div>
      <div>
        <%# Right buttons here %>
      </div>
    </div>
  </div>
</div>

<%# Main content %>
<section class="content">
  <div class="container-fluid">

    <%- include('../../partials/loaders/content'); %>

    <%# Form Card %>
    <form class="card card-outline card-primary" id="addProject_form" style="display: none">

      <div class="card-header">
        <div class="d-flex align-items-center justify-content-between">
          <h3 class="card-title">Create a proposal form</h3>
          <div class="card-tools">
            <button 
              type="button" 
              class="btn btn-sm btn-negative" 
              data-card-widget="goback" 
              data-toggle="tooltip"
              title="Go back"
            >
              <i class="fas fa-arrow-left"></i>
            </button>
            <button 
              type="button" 
              class="btn btn-sm btn-negative" 
              data-card-widget="maximize"
              data-toggle="tooltip"
              title="Maximize/minimize card"
            >
              <i class="fas fa-expand"></i>
            </button>
          </div>
        </div>
      </div>

      <div class="card-body">

        <%# Stepper %>
        <div class="bs-stepper" id="addProject_stepper">

          <%# Stepper Header %>
          <div class="table-responsive mb-3">
            <div class="bs-stepper-header" role="tablist">

              <%# Project Details %>
              <div class="step" data-target="#projectDetails_stepperPane">
                <button type="button" class="step-trigger" role="tab"
                  aria-controls="projectDetails_stepperPane" id="financialRequirements_stepperHeaderBtn">
                  <span class="bs-stepper-circle">1</span>
                  <span class="bs-stepper-label">Project Details</span>
                </button>
              </div>

              <div class="line"></div>

              <%# Financial Requirements %>
              <div class="step" data-target="#financialRequirements_stepperPane">
                <button type="button" class="step-trigger" role="tab"
                  aria-controls="financialRequirements_stepperPane" id="financialRequirements_stepperHeaderBtn">
                  <span class="bs-stepper-circle">2</span>
                  <span class="bs-stepper-label">Financial Requirements</span>
                </button>
              </div>

              <div class="line"></div>

              <%# Evaluation Plan %>
              <div class="step" data-target="#evaluationPlan_stepperPane">
                <button type="button" class="step-trigger" role="tab"
                  aria-controls="evaluationPlan_stepperPane" id="evaluationPlan_stepperHeaderBtn">
                  <span class="bs-stepper-circle">3</span>
                  <span class="bs-stepper-label">Evaluation Plan</span>
                </button>
              </div>

              <div class="line"></div>

              <%# Confirmation %>
              <div class="step" data-target="#confirmation_stepperPane">
                <button type="button" class="step-trigger" role="tab"
                  aria-controls="confirmation_stepperPane" id="confirmation_stepperHeaderBtn">
                  <span class="bs-stepper-circle">4</span>
                  <span class="bs-stepper-label">Confirmation</span>
                </button>
              </div>
            </div>
          </div>

          <%# Stepper Content %>
          <div class="bs-stepper-content">

            <%# Project Details %>
            <div id="projectDetails_stepperPane" class="content" role="tabpanel" aria-labelledby="financialRequirements_stepperHeaderBtn">
              <div class="form-row">

                <%# Project Title %>
                <div class="col-12">
                  <div class="form-group">
                    <label for="addProject_projectTitle">
                      <span>Project Title</span>
                      <span class="text-danger">*</span>
                    </label>
                    <input 
                      type="text" 
                      class="form-control" 
                      id="addProject_projectTitle" 
                      name="title"
                      placeholder="Insert project title here"
                    />
                  </div>
                </div>

                <%# Implementer %>
                <div class="col-12">
                  <div class="form-group">
                    <label for="addProject_implementer">
                      <span>Implementer</span>
                      <span class="text-danger">*</span>
                    </label>
                    <input type="text" class="form-control" id="addProject_implementer" name="implementer"
                      placeholder="Type the project implementer here">
                  </div>
                </div>

                <%# Start Date %>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="addProject_startDate">
                      <span>Start Date</span>
                      <span class="text-danger">*</span>
                    </label>
                    <div class="input-group date">
                      <input 
                        type="text" 
                        class="form-control" 
                        id="addProject_startDate" 
                        name="start_date"
                        placeholder="Please select a start date" 
                        data-inputmask-alias="datetime"
                        data-inputmask-inputformat="yyyy-mm-dd" 
                        data-mask 
                      />
                      <div class="input-group-append">
                        <button 
                          type="button" 
                          class="btn btn-primary" 
                          id="addProject_startDate_pickerBtn"
                          data-toggle="tooltip" 
                          title="Select a start date"
                        >
                          <i class="fa fa-calendar-day fa-fw"></i>
                        </button>
                      </div>
                    </div>
                  </div>
                </div>

                <%# End Date %>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="addProject_endDate">
                      <span>End Date</span>
                      <span class="text-danger">*</span>
                    </label>
                    <div class="input-group date">
                      <input 
                        type="text" 
                        class="form-control" 
                        id="addProject_endDate" 
                        name="end_date"
                        placeholder="Please select an end date" 
                        data-inputmask-alias="datetime"
                        data-inputmask-inputformat="yyyy-mm-dd" 
                        data-mask 
                      />
                      <div class="input-group-append">
                        <button type="button" class="btn btn-primary" id="addProject_endDate_pickerBtn"
                          data-toggle="tooltip" title="Select an end date">
                          <i class="fa fa-calendar-day fa-fw"></i>
                        </button>
                      </div>
                    </div>
                  </div>
                </div>

                <%# Project Team %>
                <div class="col-12">
                  <div class="form-group" id="addProject_projectTeam_grp">
                    <label>
                      <span>Project Team</span>
                      <span class="text-danger">*</span>
                    </label>

                    <div class="d-flex justify-content-between">
                      <button type="button" class="btn btn-sm btn-success" id="addTeamMember_btn">
                        <i class="fas fa-plus mr-1"></i>
                        <span>Add team member</span>
                      </button>
                    </div>
                  </div>
                </div>

                <%# Target Groups %>
                <div class="col-12">
                  <div class="form-group" id="addProject_targetGroups_grp">
                    <label>
                      <span>Target Groups</span>
                      <span class="text-danger">*</span>
                    </label>

                    <div class="d-flex justify-content-between">
                      <button type="button" class="btn btn-sm btn-success" id="addTargetGroup_btn">
                        <i class="fas fa-plus mr-1"></i>
                        <span>Add target group</span>
                      </button>
                    </div>
                  </div>
                </div>

                <%# Cooperating Agencies %>
                <div class="col-12">
                  <div class="form-group" id="addProject_cooperatingAgencies_grp">
                    <label for="addProject_cooperatingAgencies">
                      <span>Cooperating Agencies</span>
                      <span class="text-danger">*</span>
                    </label>

                    <div class="form-group">
                      <div class="form-row">
                        <div class="col-md-12">
                          <select 
                            name="cooperating_agencies" 
                            id="addProject_cooperatingAgencies_select" 
                            class="form-control select2"
                            style="width: 100%;"
                          >
                            <option disabled>Select a start and end date first.</option>
                          </select>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <%# Impact Statement %>
                <div class="col-12">
                  <div class="form-group">
                    <label for="addProject_impactStatement">
                      <span>Impact Statement</span>
                      <span class="text-danger">*</span>
                    </label>
                    <textarea 
                      name="impact_statement" 
                      id="addProject_impactStatement" 
                      class="form-control"
                      cols="30" 
                      rows="5"
                      placeholder="Compose the impact statement of the proposed project here"
                    ></textarea>
                  </div>
                </div>

                <%# Summary %>
                <div class="col-12">
                  <div class="form-group">
                    <label for="addProject_summary">
                      <span>Summary</span>
                      <span class="text-danger">*</span>
                    </label>
                    <textarea id="addProject_summary" name="summary" class="form-control" cols="30" rows="5"
                      placeholder="Compose the summary of the proposed project here"></textarea>
                  </div>
                </div>

              </div>
            </div>

            <%# Financial Requirements %>
            <div id="financialRequirements_stepperPane" class="content" role="tabpanel" aria-labelledby="financialRequirements_stepperHeaderBtn">

              <%# Add Line Item Budget %>
              <div class="form-group">
                <label for=""> Add budget item category</label>
                <div class="form-row">

                  <%# Options %>
                  <div class="col-10 col-md-6 ">
                    <select class="form-select select2" style="width: 100%" name="line_item_budget"
                      id="financialRequirement_addLineItemBudget_select">
                      <option disabled>Loading... Please wait.</option>
                    </select>
                  </div>

                  <%# Add button %>
                  <div class="col-2 col-md-6 ">
                    <button type="button" class="btn btn-success" id="financialRequirement_addLineItemBudget_btn"
                      data-toggle="tooltip" title="Select a line item budget and click this button to add">
                      <i class="fas fa-plus"></i>
                    </button>
                  </div>
                </div>
              </div>

              <%# Financial Requirement Table %>
              <div class="table-responsive">
                <table class="table table-bordered" id="financialRequirements_form">
                  <thead class="text-center">
                    <th class="align-middle" style="width: 25%">Budget Item</th>
                    <th class="align-middle" style="width: 25%">Particulars</th>
                    <th class="align-middle" style="width: 15%">Quantity / Pieces</th>
                    <th class="align-middle" style="width: 15%">
                      <div>Estimated Cost</div>
                      <div class="small">(per qty/pcs)</div>
                    </th>
                    <th class="align-middle" style="width: 15%">Total Amount</th>
                    <th style="width: 5%"></th>
                  </thead>
                  <tbody>
                    <tr id="preAddLineItemBudget">
                      <td colspan="6">
                        <div class="text-center p-5 m-5">
                          <h3 class="text-muted">Please add a line item budget first</h3>
                        </div>
                      </td>
                    </tr>
                    <tr id="overallAmount_row">
                      <td colspan="4">
                        <div class="text-right font-weight-bold">Overall Amount</div>
                      </td>
                      <td class="text-right">
                        <div class="font-weight-bold" id="overallAmount">&#8369;0.00</div>
                        <div class="small text-danger" id="overallAmount_invalidFeedback" style="display: none"></div>
                      </td>
                      <td></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>

            <%# Evaluation Plan %>
            <div id="evaluationPlan_stepperPane" class="content" role="tabpanel"
              aria-labelledby="evaluationPlan_stepperHeaderBtn">

              <div class="table-responsive">
                <table class="table table-bordered" id="evaluationPlan_form">
                  <thead class="vertical-align-middle text-center">
                    <th style="width: 24%">Outcome</th>
                    <th style="width: 24%">Indicator</th>
                    <th style="width: 24%">Data Collection Method</th>
                    <th style="width: 24%">Frequency</th>
                    <th style="width: 4%"></th>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="text-center" colspan="5">
                        <button type="button" class="btn btn-sm btn-success" id="evaluationPlan_addPlan_btn">
                          <i class="fas fa-plus mr-1"></i>
                          <span>Add plan row</span>
                        </button>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>

            </div>

            <%# Confirmation %>
            <div id="confirmation_stepperPane" class="content" role="tabpanel"
              aria-labelledby="confirmation_stepperHeaderBtn">
              <%# Label %>
              <div class="form-group">
                <label>Please review if you typed the correct details before saving</label>
              </div>

              <%# Project Requirements %>
              <h4 class="mb-3">I. Project Details</h4>
              <dl class="row">

                <div class="col-12"><hr class="mt-0 mb-2"></div>

                <%# Title %>
                <dt class="col-md-3">
                  <div class="mx-2">Title</div>
                </dt>
                <dd class="col-md-9">
                  <div class="mx-2" id="projectDetailsConfirm_title"></div>
                </dd>

                <div class="col-12"><hr class="my-2"></div>

                <%# Implementer %>
                <dt class="col-md-3">
                  <div class="mx-2">Implementer</div>
                </dt>
                <dd class="col-md-9">
                  <div class="mx-2" id="projectDetailsConfirm_implementer"></div>
                </dd>

                <div class="col-12"><hr class="my-2"></div>

                <%# Project Team %>
                <dt class="col-md-3">
                  <div class="mx-2">Project Team</div>
                </dt>
                <dd class="col-md-9">
                  <div class="mx-2" id="projectDetailsConfirm_projectTeam"></div>
                </dd>

                <div class="col-12"><hr class="my-2"></div>

                <%# Target Groups %>
                <dt class="col-md-3">
                  <div class="mx-2">Target Group(s)</div>
                </dt>
                <dd class="col-md-9">
                  <div class="mx-2" id="projectDetailsConfirm_targetGroups"></div>
                </dd>

                <div class="col-12"><hr class="my-2"></div>

                <%# Cooperating Agencies %>
                <dt class="col-md-3">
                  <div class="mx-2">Cooperating Agency(ies)</div>
                </dt>
                <dd class="col-md-9">
                  <div class="mx-2" id="projectDetailsConfirm_cooperatingAgencies"></div>
                </dd>

                <div class="col-12"><hr class="my-2"></div>

                <%# Time Frame %>
                <dt class="col-md-3">
                  <div class="mx-2">Time Frame</div>
                </dt>
                <dd class="col-md-9">
                  <div class="mx-2" id="projectDetailsConfirm_timeFrame"></div>
                </dd>
                
                <div class="col-12"><hr class="my-2"></div>

                <%# Impact Statement %>
                <dt class="col-md-3">
                  <div class="mx-2">Impact Statement</div>
                </dt>
                <dd class="col-md-9">
                  <div class="mx-2" id="projectDetailsConfirm_impactStatement"></div>
                </dd>
                
                <div class="col-12"><hr class="my-2"></div>

                <%# Summary %>
                <dt class="col-md-3">
                  <div class="mx-2">Summary</div>
                </dt>
                <dd class="col-md-9">
                  <div class="mx-2" id="projectDetailsConfirm_summary"></div>
                </dd>

                <div class="col-12"><hr class="my-2"></div>
              </dl>

              <%# Financial Requirements %>
              <h4 class="mb-3">II. Financial Requirements</h4>
              <div class="table-responsive mb-4">
                <table class="table table-bordered">
                  <thead class="text-center align-middle">
                    <th class="align-middle" style="width: 35%">Budget Item</th>
                    <th class="align-middle" style="width: 35%">Particulars</th>
                    <th class="align-middle" style="width: 10%">Quantity / Pieces</th>
                    <th class="align-middle" style="width: 10%">
                      <div>Estimated Cost</div>
                      <div class="small">(per qty/pcs)</div>
                    </th>
                    <th class="vertical-middle" style="width: 10%">Total Amount</th>
                  </thead>
                  <tbody id="projectDetailsConfirm_financialRequirements">
                    <tr>
                      <td colspan="4" class="text-right">
                        <b>Overall Amount</b>
                      </td>
                      <td class="text-right">&#8369;0.00</td>
                    </tr>
                  </tbody>
                </table>
              </div>

              <%# Evaluation Plan %>
              <h4 class="mb-3">III. Evaluation Plan</h4>
              <div class="table-responsive mb-4">
                <table class="table table-bordered">
                  <thead class="vertical-align-middle text-center">
                    <th class="align-middle" style="width: 25%">Outcome</th>
                    <th class="align-middle" style="width: 25%">Indicator</th>
                    <th class="align-middle" style="width: 25%">Data Collection Method</th>
                    <th class="align-middle" style="width: 25%">Frequency</th>
                  </thead>
                  <tbody id="projectDetailsConfirm_evaluationPlans"></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="card-footer">
        <div class="float-left">
          <button 
            type="button" 
            class="btn btn-negative" 
            data-card-widget="goback"
          >
            <span>Cancel</span>
          </button>
        </div>
        <div class="float-right">
          <button type="button" class="btn btn-negative" id="prevBtn" style="display: none">
            <i class="fas fa-caret-left mr-1"></i>
            <span>Back</span>
          </button>
          <button type="button" class="btn btn-secondary" id="nextBtn">
            <span>Next</span>
            <i class="fas fa-caret-right ml-1"></i>
          </button>
          <button type="submit" class="btn btn-primary" id="submitBtn" style="display: none">
            <span>Save</span>
            <i class="fas fa-check ml-1"></i>
          </button>
        </div>
      </div>
    </form>

  </div>
</section>



<%# ***** Scripts ***** %>

