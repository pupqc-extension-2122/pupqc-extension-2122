<%# ***** Body ***** %>

<%- include('../../partials/loaders/content_header') %>

<%# Content Header (Page header) %>
<div class="content-header" style="display: none">
  <div class="container-fluid">

    <%# Breadcrumb %>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="<%=BASE_URL%>/m/dashboard">MOA/MOU</a></li>
      <li class="breadcrumb-item active" id="active_breadcrumb">MOA/MOU Details</li>
    </ol>

    <div class="d-sm-flex align-items-sm-center justify-content-between">

      <%# Header & Subtitle %>
      <div class="flex-wrap mb-2 mb-md-0">
        <h1 class="m-0">MOA/MOU Details</h1>
      </div>
      <div>
        <!-- <button type="button" class="btn btn-default" id="daterange-btn">
          <i class="far fa-calendar-alt mr-1"></i>
          <span>Filter by date</span>
        </button> -->
      </div>
    </div>
  </div>
</div>

<%# Main Content %>
<section class="content">
  <div class="container-fluid">

    <div class="row">
      <div class="col-md-9">

        <%# Memo Details loader %>
        <div class="card card-primary card-outline" id="memoDetails_header_loader">
          <div class="card-body">

            <%# Title %>
            <div class="row">
              <div class="col-10">
                <h3 id="projectDetails_header_title">
                  <div class="skeleton h3"></div>
                  <div class="skeleton h3"></div>
                </h3>
              </div>
            </div>
            
            <%# Implementer %>
            <div id="projectDetails_header_implementer">
              <div class="skeleton text" style="width: 50%"></div>
            </div>
            
            <%# Time Frame %>
            <div id="projectDetails_header_timeframe">
              <div class="skeleton text" style="width: 25%"></div>
            </div>
            
            <%# Status %>
            <div class="mt-1" id="projectDetails_header_status">
              <div class="skeleton text" style="width: 5rem"></div>
            </div>

            <%# Activity Evaluation Progress %>
            <div class="mt-2 w-50 d-none">
              <div>Activities graded: 2 out of 5</div>
              <div class="progress progress-sm">
                <div class="progress-bar bg-success" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                  <span class="sr-only">20% Complete</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <%# Summary Card %>
        <div class="card card-primary card-outline" id="memoDetails_header" style="display: none">
          <div class="card-body">
            
            <div>

              <%# Partnership Name %>
              <div class="row">
                <div class="col-10">
                  <h3 id="memoDetails_partnerName"></h3>
                </div>
              </div>
              
              <%# Organization %>
              <div>
                <i 
                  class="fas fa-sitemap fa-fw mr-2 text-dark" 
                  data-toggle="tooltip" 
                  title="Organization"
                ></i>
                <span id="memoDetails_organization"></span>
              </div>

              <%# Partner Representative Name %>
              <div>
                <i 
                  class="fas fa-user-tie fa-fw mr-2 text-dark" 
                  data-toggle="tooltip" 
                  title="Representative"
                ></i>
                <span id="memoDetails_representative"></span>
              </div>

              <%# PUP REPD Representative %>
              <div>
                <i 
                  class="fas fa-star fa-fw mr-2 text-dark" 
                  data-toggle="tooltip" 
                  title="PUP REPD Representative"
                ></i>
                <span id="memoDetails_pupRepresentative"></span>
              </div>
              
              <%# Validity Date - End Date %>
              <div>
                <i 
                  class="fas fa-certificate fa-fw mr-2 text-dark" 
                  data-toggle="tooltip" 
                  title="Validity"
                ></i>
                <span id="memoDetails_validity"></span>
              </div>
              
              <%# Status %>
              <div class="mt-1">
                <div class="badge badge-subtle-success py-1 px-2">
                  <i class="fas fa-check fa-fw mr-1"></i>
                  <span>Active</span>
                </div>
              </div>
            </div>

            <%# Navigation Tabs %>
            <ul 
              class="nav nav-pills mt-4" 
              role="tablist" 
              id="projectDetails_navTabs"
            >

              <%# Details Tab %>
              <li class="nav-item">
                <a 
                  class="nav-link active" 
                  id="projectDetails_summary_tab" 
                  data-toggle="pill"
                  href="#projectDetails_summary_pane" 
                  role="tab"
                  aria-controls="projectDetails_summary_pane"
                >Details</a>
              </li>

              <div class="nav-item pl-1"></div>

              <%# Documents Tab %>
              <li class="nav-item">
                <a 
                  class="nav-link" 
                  id="projectDetails_documents_tab" 
                  data-toggle="pill"
                  href="#projectDetails_documents_pane" 
                  role="tab"
                  aria-controls="projectDetails_documents_pane"
                >Documents</a>
              </li>

            </ul>
          </div>
        </div>

        <%# Datatable Card %>
        <div class="card">

          <div class="card-header">
            <div class="d-flex align-items-center justify-content-between">
              <h3 class="card-title">List of Documents</h3>
              <div class="card-tools">
                <button 
                  type="button" 
                  class="btn btn-sm btn-negative" 
                  data-card-widget="collapse"
                  data-toggle="tooltip"
                  title="Collapse card"
                >
                  <i class="fas fa-minus"></i>
                </button>
                <button 
                  type="button" 
                  class="btn btn-sm btn-negative" 
                  data-card-widget="maximize"
                  data-toggle="tooltip"
                  title="Maximize/minimize card"
                >
                  <i class="fas fa-expand"></i>
                </button>
                <button 
                  type="button" 
                  class="btn btn-sm btn-negative" 
                  data-toggle="tooltip"
                  title="Reload table"
                >
                  <i class="fas fa-sync-alt"></i>
                </button>
              </div>
            </div>
          </div>

          <div class="card-body">
            <div class="table-responsive">
              <table class="table w-100" id="partnerMemos_dt">
                <thead>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Date</th>
                  <th>File Size</th>
                  <th>Status</th>
                  <th></th>
                </thead>
                <tbody>
                  <tr>
                    <td colspan="6" class="text-center">
                      <%- include('../../partials/loaders/dt_body') %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>

          </div>
        </div>

      </div>
      
      <div class="col-md-3">
        <div class="sticky-top">

          <%- include('../../partials/loaders/options') %>
          
          <%# Options %>
          <div class="card" id="options" style="display: none;">
            <div class="card-header">
              <div class="d-flex justify-content-between align-items-center">
                <h3 class="card-title">Options</h3>
                <div class="card-tools">
                  <button type="button" class="btn btn-sm btn-negative" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                  </button>
                </div>
              </div>
            </div>
            
            <div class="card-body p-2">
              <div class="dropdown-header">MOA/MOU details</div>
              <a class="btn btn-negative btn-block text-left" href=""	data-toggle="modal"
              data-target="#editMOA_modal">
                <i class="fas fa-edit text-info fa-fw mr-1"></i>
                <span>Edit details</span>
              </a>
              <hr class="my-2">
              <div class="dropdown-header">Renewal</div>
              <button 
                type="button"
                class="btn btn-negative btn-block text-left" 
                data-toggle="modal"
                data-target="#uploadDocumentRenewal_modal"
              >
                <i class="fas fa-file-upload text-primary fa-fw mr-1"></i>
                <span>Upload Document</span>
              </button>
            </div>
            
          </div>

        </div>
      </div>
    </div>

  </div>
</section>

<%# Modals %>

<%# Edit MOA/MOU Details %>
<div class="modal fade" id="editMOA_modal">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Edit MOA/MOU Details</h4>
        <button type="button" class="btn btn-sm btn-negative" data-dismiss="modal" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="modal-body">
        <%# Form Card %>
        <form id="editMOA_form">
          <%# Partnership Name %>
          <div class="col-12">
            <div class="form-group">
              <label for="editMOA_partnershipName">
                <span>Name of Partner</span>
                <span class="text-danger">*</span>
              </label>
              <input type="text" class="form-control" id="editMOA_partnershipName" name="name"
                placeholder="Insert partnership name here ..." value="Grain Foundation for PWDs Inc.">
            </div>
          </div>

          <%# Partner Address %>
          <div class="col-12">
            <div class="form-group">
              <label for="editMOA_partnershipAddress">
                <span>Partner Address</span>
                <span class="text-danger">*</span>
              </label>
              <input type="text" class="form-control" id="editMOA_partnershipAddress" name="address"
                placeholder="Insert partner address here ..." value="21 Don Fabian St., Commonwealth, Quezon City">
            </div>
          </div>

          <%# Partnership Representative Name %>
          <div class="col-12">
            <div class="form-group">
              <label for="editMOA_partnershipRepresentative">
                <span>Name of Representative</span>
                <span class="text-danger">*</span>
              </label>
              <input type="text" class="form-control" id="editMOA_partnershipRepresentative" name="representative"
                placeholder="Insert partnership representative name here ..." value="Executive Director Byung Min Lee">
            </div>
          </div>

          <%# PUP REPD Representative %>
          <div class="col-12">
            <div class="form-group">
              <label for="editMOA_pupREPD">
                <span>PUP REPD Representative</span>
                <span class="text-danger">*</span>
              </label>
              <input type="text" class="form-control" id="editMOA_pupREPD" name="pup_REPD"
                placeholder="Insert PUP REPD representative here ..." value="Dr. Anna Ruby P. Gapasin">
            </div>
          </div>

          <%# Organization %>
          <div class="col-12">
            <div class="form-group" id="editMOA_organization_grp">
              <label for="editMOA_organization">
                <span>Organization</span>
                <span class="text-danger">*</span>
              </label>

              <div class="form-group">
                <div class="form-row">
                  <div class="col-md-8">
                    <select 
                      name="organization" 
                      id="editMOA_organization_select" 
                      class="form-control select2"
                      style="width: 100%;"
                    >
                      <option selected>Polytechnic University of the Philippines, Quezon City Branch</option>
                    </select>
                  </div>
                  <div class="col-md-4 text-right">
                    <button class="btn btn-primary btn-sm" type="button">
                      <i class="fas fa-plus mr-1"></i>
                      <span>Add organization</span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <%# Notary Signed Date %>
          <div class="col-12">
            <div class="form-group">
              <label for="editMOA_notarySignedDate">
                <span>Notary Signed Date</span>
                <span class="text-danger">*</span>
              </label>
              <div class="input-group date">
                <input type="text" class="form-control" id="editMOA_notarySignedDate" name="notary_date"
                  placeholder="Please select notary signed date" data-inputmask-alias="datetime"
                  data-inputmask-inputformat="mm/dd/yyyy" data-mask value="05/14/2023"/>
                <div class="input-group-append">
                  <button type="button" class="btn btn-primary" id="editMOA_notarySignedDate_pickerBtn"
                    data-toggle="tooltip" title="Select notary signed date">
                    <i class="fa fa-calendar-day fa-fw"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>

          <%# Validity Date %>
          <div class="col-12">
            <div class="form-group">
              <label for="editMOA_validityDate">
                <span>Validity Date</span>
                <span class="text-danger">*</span>
              </label>
              <div class="input-group date">
                <input type="text" class="form-control" id="editMOA_validityDate" name="validity_date"
                  placeholder="Please select validity date" data-inputmask-alias="datetime"
                  data-inputmask-inputformat="mm/dd/yyyy" data-mask value="05/14/2026"/>
                <div class="input-group-append">
                  <button type="button" class="btn btn-primary" id="editMOA_validityDate_pickerBtn"
                    data-toggle="tooltip" title="Select validity date">
                    <i class="fa fa-calendar-day fa-fw"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-negative" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary" id="submitPartnership_btn">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%# Upload Document Modal %>
<div class="modal fade" id="uploadDocumentRenewal_modal">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <form class="modal-content" id="uploadDocumentRenewal_form">
      <div class="modal-header">
        <h4 class="modal-title">
          <span>Upload Document</span>
        </h4>
        <button type="button" class="btn btn-sm btn-negative" data-dismiss="modal" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="modal-body">
        
        <!-- Upload document -->
        <div class="form-group">
          <label for="document">
            <span>Upload document here</span>
            <span class="text-danger">*</span>
          </label>
          <div class="input-group">
            <div class="custom-file">
                <input 
                    type="file" 
                    class="custom-file-input" 
                    id="uploadDocumentRenewal"
                    name="uploadDocumentRenewal"
                >
                <label class="custom-file-label" for="uploadDocument">Choose file</label>
            </div>
          </div>
        </div>

      </div>

      <div class="modal-footer">
        <button 
          type="button" 
          class="btn btn-negative" 
          data-dismiss="modal"
        >Cancel</button>
        <button 
          type="submit" 
          class="btn btn-primary" 
          id="uploadDocument_btn"
        >
          <span>Upload</span>
        </button>
      </div>
    </form>
  </div>
</div>



