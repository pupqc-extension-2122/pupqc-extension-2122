            </div>

          </div>
        </div>

      </div>
      
      <div class="col-md-3">
        
        <%# Options %>
        <div class="card">
          <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
              <h3 class="card-title">Options</h3>
              <div class="card-tools">
                <button type="button" class="btn btn-sm btn-negative" data-card-widget="collapse">
                  <i class="fas fa-minus"></i>
                </button>
              </div>
            </div>
          </div>
          
          <div class="card-body p-2">
                <div class="dropdown-header">MOA/MOU details</div>
                <a class="btn btn-negative btn-block text-left" href=""	data-toggle="modal"
                data-target="#editMOA_modal">
                  <i class="fas fa-edit text-info fa-fw mr-1"></i>
                  <span>Edit details</span>
                </a>
                <hr class="my-2">
                <div class="dropdown-header">Renewal</div>
                <button 
                  type="button"
                  class="btn btn-negative btn-block text-left" 
                  data-toggle="modal"
                  data-target="#uploadDocumentRenewal_modal"
                >
                  <i class="fas fa-file-upload text-primary fa-fw mr-1"></i>
                  <span>Upload Document</span>
                </button>
            </ul>
          </div>
          
        </div>

        <%# Timeline %>
        <div class="timeline">
          <div class="time-label font-weight-light">
            <span class="bg-primary">History Logs</span>
          </div>
          
          <div>
            <i class="fas fa-sync-alt bg-success"></i>
            <div class="timeline-item">
              <div class="timeline-body small">
                <div class="font-weight-bold">May 14, 2022</div>
