<%# Edit Program Modal %>
<div class="modal fade" id="editProgram_modal" data-backdrop="static">
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
    <form class="modal-content" id="editProgram_form">
      <div class="modal-header">
        <h4 class="modal-title">Edit a program</h4>
        <button type="button" class="btn btn-sm btn-negative" data-dismiss="modal" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      
      <div class="modal-body">
        
        <%# Form Group Loader %>
        <div id="editProgram_formGroups_loader">
          <div class="form-group">
            <div class="skeleton text" style="width: 8rem"></div>
            <div class="skeleton input"></div>
          </div>
          <div class="form-group">
            <div class="skeleton text" style="width: 8rem"></div>
            <div class="skeleton input"></div>
            <div class="skeleton input"></div>
          </div>
          <div class="form-group">
            <div class="p-3 my-5"></div>
          </div>
        </div>

        <%# Form Groups %>
        <div class="row" id="editProgram_formGroups" style="display: none">

          <input type="hidden" id="editProgram_id" name="id">

          <%# Name %>
          <div class="col-12">
            <div class="form-group">
              <label for="editProgram_name">
                <span>Full Name</span>
                <span class="text-danger">*</span>
              </label>
              <input 
                type="text" 
                class="form-control" 
                id="editProgram_fullName" 
                name="full_name"
                placeholder="Enter the name here"
              />
            </div>
          </div>

          <%# Abbreviation %>
          <div class="col-12">
            <div class="form-group">
              <label for="editProgram_abbreviation">
                <span>Abbreviation/Short Name</span>
                <span class="text-danger">*</span>
              </label>
              <input 
                type="text" 
                class="form-control" 
                id="editProgram_shortName" 
                name="short_name"
                placeholder="Enter the abbreviation here"
              />
            </div>
          </div>

        </div>
      </div>
      <div class="modal-footer">
        <button 
          type="button" 
          class="btn btn-negative" 
          id="editProgram_cancelBtn"
          data-dismiss="modal"
        >Cancel</button>
        <button 
          type="submit" 
          class="btn btn-primary" 
          id="editProgram_saveBtn"
        >Save</button>
      </div>
    </form>
  </div>
</div>