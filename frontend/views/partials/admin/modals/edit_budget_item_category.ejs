<%# Edit Budget Item Category Modal %>
<div class="modal fade" id="editBudgetItemCategory_modal" data-backdrop="static">
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
    <form class="modal-content" id="editBudgetItemCategory_form">
      <div class="modal-header">
        <h4 class="modal-title">Edit Budget Item Category Details</h4>
        <button type="button" class="btn btn-sm btn-negative" data-dismiss="modal" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      
      <div class="modal-body">
        
        <%# Form Group Loader %>
        <div id="editBudgetItemCategory_formGroups_loader">
          <div class="form-group">
            <div class="skeleton text" style="width: 8rem"></div>
            <div class="skeleton input"></div>
          </div>
          <div class="form-group">
            <div class="skeleton text" style="width: 8rem"></div>
            <div class="skeleton input"></div>
            <div class="skeleton input"></div>
          </div>
          <div class="form-group">
            <div class="p-3 my-5"></div>
          </div>
        </div>

        <%# Form Groups %>
        <div class="row" id="editBudgetItemCategory_formGroups" style="display: none">

          <%# Budget Item Category %>
          <input type="hidden" id="editBudgetItemCategory_categoryId" name="category_id">

          <%# Budget Item Category Name %>
          <div class="col-12">
            <div class="form-group">
              <label for="editBudgetItemCategory_categoryName">
                <span>Budget Item Category Name</span>
                <span class="text-danger">*</span>
              </label>
              <input 
                type="text" 
                class="form-control" 
                id="editBudgetItemCategory_categoryName" 
                name="category_name"
                placeholder="Enter the budget item category name here"
              />
            </div>
          </div>

        </div>
      </div>
      <div class="modal-footer">
        <button 
          type="button" 
          class="btn btn-negative" 
          id="editBudgetItemCategory_cancelBtn"
          data-dismiss="modal"
        >Cancel</button>
        <button 
          type="submit" 
          class="btn btn-primary"
          id="editBudgetItemCategory_saveBtn"
        >
          <i class="fas fa-check mr-1"></i>
          <span>Save</span>
        </button>
      </div>
    </form>
  </div>
</div>