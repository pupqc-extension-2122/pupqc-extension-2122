<%# Edit Branch/Campus Modal %>
<div class="modal fade" id="editBranchCampus_modal" data-backdrop="static">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <form class="modal-content" id="editBranchCampus_form">
      <div class="modal-header">
        <h4 class="modal-title">Edit Branch/Campus Details</h4>
        <button type="button" class="btn btn-sm btn-negative" data-dismiss="modal" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      
      <div class="modal-body">
        <%# Form Group Loader %>
        <div id="editBranchCampus_formGroups_loader">
          <div class="form-group">
            <div class="skeleton text" style="width: 8rem"></div>
            <div class="skeleton input"></div>
          </div>
          <div class="form-group">
            <div class="skeleton text" style="width: 8rem"></div>
            <div class="skeleton input"></div>
            <div class="skeleton input"></div>
          </div>
          <div class="form-group">
            <div class="p-3 my-5"></div>
          </div>
        </div>

        <%# Form Groups %>
        <div class="row" id="editBranchCampus_formGroups" style="display: none">

          <%# Budget Item Category %>
          <input type="hidden" id="editBranchCampus_branchCampusId" name="branch_campus_id">

          <%# Branch/Campus Name %>
          <div class="col-12">
            <div class="form-group">
              <label for="editBranchCampus_branchCampusName">
                <span>Branch/Campus Name</span>
                <span class="text-danger">*</span>
              </label>
              <input 
                type="text" 
                class="form-control" 
                id="editBranchCampus_branchCampusName" 
                name="branchCampus_name"
                placeholder="Enter the branch/campus name here"
              />
            </div>
          </div>

          <%# Type %>
          <div class="col-12">
            <div class="form-group" id="editBranchCampus_type_grp">
              <label for="editBranchCampus_type">
                <span>Type</span>
                <span class="text-danger">*</span>
              </label>
  
              <div class="form-group">
                <div class="form-row">
                  <div class="col-12">
                    <select 
                      name="editBranchCampus_type" 
                      id="editBranchCampus_type_select" 
                      class="form-control select2"
                      style="width: 100%;"
                    > 
                    <option disabled>Select a branch/campus type.</option>
                    </select>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
      <div class="modal-footer">
        <button 
          type="button" 
          class="btn btn-negative" 
          id="editBranchCampus_cancelBtn"
          data-dismiss="modal"
        >Cancel</button>
        <button 
          type="submit" 
          class="btn btn-primary"
          id="editBranchCampus_saveBtn"
        >
          <i class="fas fa-check mr-1"></i>
          <span>Save</span>
        </button>
      </div>
    </form>
  </div>
</div>