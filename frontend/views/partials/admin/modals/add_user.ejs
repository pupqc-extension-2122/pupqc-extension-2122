<%# Add User Modal %>
<div class="modal fade" id="registerUser_modal" data-backdrop="static">
  <div class="modal-dialog modal-dialog-scrollable">
    <form class="modal-content" id="registerUser_form">
      <div class="modal-header">
        <h4 class="modal-title">Register a User</h4>
        <button type="button" class="btn btn-sm btn-negative" data-dismiss="modal" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      
      <div class="modal-body">

        <%# Form Group Loader %>
        <div id="addUser_formGroups_loader">
          <div class="form-group">
            <div class="skeleton text" style="width: 8rem"></div>
            <div class="skeleton input"></div>
          </div>
          <div class="form-group">
            <div class="skeleton text" style="width: 8rem"></div>
            <div class="skeleton input"></div>
            <div class="skeleton input"></div>
          </div>
          <div class="form-group">
            <div class="p-3 my-5"></div>
          </div>
        </div>

        <%# Form Groups %>
        <div class="row" id="addUser_formGroups" style="display: none">

          <%# First Name %>
          <div class="col-12">
            <div class="form-group">
              <label for="addUser_firstName">
                <span>First Name</span>
                <span class="text-danger">*</span>
              </label>
              <input 
                type="text" 
                class="form-control" 
                id="addUser_firstName" 
                name="first_name"
                placeholder="Enter the first name here"
              />
            </div>
          </div>

          <%# Middle Name %>
          <div class="col-12">
            <div class="form-group">
              <label for="addUser_middleName">
                <span>Middle Name</span>
              </label>
              <input 
                type="text" 
                class="form-control" 
                id="addUser_middleName" 
                name="middle_name"
                placeholder="Enter the middle name here"
              />
            </div>
          </div>

          <%# Last Name %>
          <div class="col-12">
            <div class="form-group">
              <label for="addUser_lastName">
                <span>Last Name</span>
                <span class="text-danger">*</span>
              </label>
              <input 
                type="text" 
                class="form-control" 
                id="addUser_lastName" 
                name="last_name"
                placeholder="Enter the last name here"
              />
            </div>
          </div>

          <%# Suffix Name %>
          <div class="col-12">
            <div class="form-group">
              <label for="addUser_suffixName">
                <span>Suffix Name</span>
              </label>
              <input 
                type="text" 
                class="form-control" 
                id="addUser_suffixName" 
                name="suffix_name"
                placeholder="Enter the suffix name here"
              />
            </div>
          </div>
          
          <%# Email %>
          <div class="col-12">
            <div class="form-group">
              <label for="addUser_email">
                <span>Email</span>
                <span class="text-danger">*</span>
              </label>
              <input 
                type="email" 
                class="form-control" 
                id="addUser_email" 
                name="email"
                placeholder="Enter the email address here"
              />
            </div>
          </div>

          <%# Role %>
          <div class="col-12">
            <div class="form-group" id="addUser_role_grp">
              <label for="addUser_role">
                <span>Select one or more roles</span>
                <span class="text-danger">*</span>
              </label>

              <div id="addUser_rolesList"></div>

            </div>
          </div>

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-negative" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" id="submitUser_btn">Submit</button>
      </div>
    </form>
  </div>
</div>