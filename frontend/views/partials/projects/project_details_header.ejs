<%# Project Details Header %>
<div class="card card-primary card-outline" id="projectDetails_header">
  <div class="card-body">

    <%# Title %>
    <div class="row">
      <div class="col-10">
        <h3 id="projectDetails_header_title">
          <div class="skeleton h3"></div>
          <div class="skeleton h3"></div>
        </h3>
      </div>
    </div>
    
    <%# Implementer %>
    <div class="d-flex align-items-baseline" id="projectDetails_header_implementer">
      <div class="skeleton text" style="width: 50%"></div>
    </div>
    
    <%# Time Frame %>
    <div class="d-flex align-items-baseline" id="projectDetails_header_timeframe">
      <div class="skeleton text" style="width: 25%"></div>
    </div>
    
    <%# Status %>
    <div class="mt-1" id="projectDetails_header_status">
      <div class="skeleton text" style="width: 5rem"></div>
    </div>

    <%# Navigation Tabs %>
    <ul 
      class="nav nav-pills mt-4" 
      role="tablist" 
      id="projectDetails_navTabs"
      style="display: none"
    >

      <%# Summary Tab %>
      <li class="nav-item">
        <a 
          class="nav-link active" 
          id="projectDetails_summary_tab" 
          data-toggle="pill"
          href="#projectDetails_summary_pane" 
          role="tab"
          aria-controls="projectDetails_summary_pane"
        >Summary</a>
      </li>

      <div class="nav-item pl-1"></div>

      <%# Financial Requirements Tab %>
      <li class="nav-item">
        <a 
          class="nav-link" 
          id="projectDetails_financial_tab" 
          data-toggle="pill"
          href="#projectDetails_financial_pane" 
          role="tab"
          aria-controls="projectDetails_financial_pane"
        >Financial Requirements</a>
      </li>

      <div class="nav-item pl-1"></div>

      <%# Evaluation Plan Tab %>
      <li class="nav-item">
        <a 
          class="nav-link" 
          id="projectDetails_evaluationPlan_tab" 
          data-toggle="pill"
          href="#projectDetails_evaluationPlan_pane" 
          role="tab"
          aria-controls="projectDetails_evaluationPlan_pane"
        >Evaluation Plan</a>
      </li>
      
      <div class="nav-item pl-1"></div>

      <%# Documents Tab %>
      <li class="nav-item">
        <a 
          class="nav-link" 
          id="projectDetails_documents_tab" 
          data-toggle="pill"
          href="#projectDetails_documents_pane" 
          role="tab"
          aria-controls="projectDetails_documents_pane"
        >Documents</a>
      </li>

      <div class="nav-item pl-1"></div>

      <%# Evaluation Summary %>
      <li class="nav-item">
        <a 
          class="nav-link" 
          id="projectDetails_evaluationSummary_tab" 
          data-toggle="pill"
          href="#projectDetails_evaluationSummary_pane" 
          role="tab"
          aria-controls="projectDetails_evaluationSummary_pane"
          style="display: none"
        >Evaluation Summary</a>
      </li>
    </ul>
  </div>
</div>