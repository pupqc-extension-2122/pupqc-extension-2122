<%# Confirm Approve the Project Modal %>
<div class="modal" id="confirmRequestForRevision_modal">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <form class="modal-content" id="requestForRevision_form">
      <div class="modal-header">
        <h4 class="modal-title">Confirmation</h4>
        <button type="button" class="btn btn-sm btn-negative" data-dismiss="modal" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="modal-body">

        <div class="text-center">
          <h1 class="mr-3 display-3">
            <i class="fas fa-exclamation-circle text-info"></i>
          </h1>
          <p class="px-3 px-md-5">You are about to request revision for this project. To do so, please provide the details of why you took this action.</p>
        </div>

        <div class="form-group">
          <label for="requestForRevision_remarks">
            <span>Remarks</span>
            <span class="text-danger">*</span>
          </label>
          <textarea 
            name="remarks" 
            id="requestForRevision_remarks" 
            rows="5" 
            class="form-control"
            placeholder="Please provide the details for your action"
          ></textarea>
        </div>

        <div class="form-group">
          <p><span class="font-weight-bold">Note: </span>Once you submit, the extensionist needs to submit this again for approval and the status will go back to "For Review."</p>
        </div>

      </div>
      <div class="modal-footer">
        <button 
          type="button" 
          class="btn btn-negative" 
          data-dismiss="modal"
        >Cancel</button>
        <button 
          type="submit" 
          class="btn btn-primary" 
          id="confirmRequestForRevision_btn"
        >Submit</button>
      </div>
    </form>
  </div>
</div>