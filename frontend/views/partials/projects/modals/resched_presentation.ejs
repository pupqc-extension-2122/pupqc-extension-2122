<%# Resched Presentation Schedule Modal %>
<div class="modal fade" id="reschedPresentationSchedule_modal" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <form class="modal-content" id="reschedPresentationSchedule_form">
      <div class="modal-header">
        <h4 class="modal-title">Re-sched Project Presentation Schedule</h4>
        <button type="button" class="btn btn-sm btn-negative" data-dismiss="modal" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="modal-body">

        <div class="text-center">
          <h1 class="mr-3 display-3">
            <i class="fas fa-exclamation-circle text-info"></i>
          </h1>
          <p class="px-3 px-md-5">You are about to request a new schedule for the presentation of the project. To do so, please provide the new date and the details of why you took this action.</p>
        </div>

        <div class="form-group">
          <label for="reschedPresentation_date">
            <span>Date of presentation</span>
            <span class="text-danger">*</span>
          </label>
          <div class="input-group date">
            <input 
              type="text" 
              class="form-control" 
              id="reschedPresentation_date" 
              name="presentation_date"
              placeholder="Please select date of presentation" 
              data-inputmask-alias="datetime"
              data-inputmask-inputformat="yyyy-mm-dd" 
              data-mask 
            />
            <div class="input-group-append">
              <button 
                type="button" 
                class="btn btn-primary" 
                id="reschedPresentation_date_pickerBtn"
                data-toggle="tooltip" 
                title="Select date of presentation"
              >
                <i class="fa fa-calendar-day fa-fw"></i>
              </button>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="reschedPresentation_remarks">
            <span>Remarks</span>
            <span class="text-danger">*</span>
          </label>
          <textarea 
            name="remarks" 
            id="reschedPresentation_remarks" 
            rows="5" 
            class="form-control"
            placeholder="Please provide the details for your action"
          ></textarea>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-negative" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" id="reschedPresentationSchedule_btn">Save schedule</button>
      </div>
    </form>
  </div>
</div>