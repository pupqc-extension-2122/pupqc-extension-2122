<%# Upload Documents Modal %>
<div class="modal fade" data-backdrop="static" id="uploadDocuments_modal">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <form class="modal-content" id="submitActivityEvaluation_form">
      <div class="modal-header">
        <h4 class="modal-title">
          <i class="fas fa-list fa-fw mr-1"></i>
          <span>Upload documents</span>
        </h4>
        <button type="button" class="btn btn-sm btn-negative" data-dismiss="modal" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="modal-body">
        
        <%# Upload Document %>
        <div class="">

          <%# Dropzone %>
          <div class="form-group">

            <div 
              class="border border-secondary rounded-lg text-center p-4 user-select-none" 
              style="background: #f6f6f6; border-style: dashed !important;"
              id="dropFiles_container"
            >
              <div class="display-3 text-muted mb-3">
                <i class="fas fa-cloud-arrow-up"></i>
              </div>
              <h4 class="text-secondary mb-0">Drop your files here</h4>
              <div class="my-1">or</div>
              <div class="mt-2">
                <button 
                  type="button" 
                  class="btn btn-info" 
                  id="dropFiles_browse_btn"
                >
                  <i class="far fa-copy fa-fw mr-2"></i>
                  <span>Browse</span>
                </button>
              </div>
            </div>

          </div>

          <%# Previews %>
          <div id="dropFiles_previews">

              <%# Template %>
              <div class="d-flex mt-2 user-select-none" id="dropFiles_fileTemplate">

                <%# Thumbnail %>
                <div class="mr-2">
                  <span class="preview">
                    <img 
                      class="rounded-lg border" 
                      draggable="false"
                      style="width: 82px; height: 82px;"
                      data-dz-thumbnail 
                    />
                  </span>
                </div>
                
                <%# File & Progress %>
                <div class="flex-grow-1 border rounded p-3 mr-2">

                  <%# Filename & size %>
                  <div>
                    <div class="font-weight-bold text-wrap" data-dz-name></div>
                    <p class="small mb-1" data-dz-size></p>
                  </div>

                  <%# Progress %>
                  <div>
                    <div class="d-flex align-items-center mb-2">
                      <div class="progress flex-grow-1 mr-2">
                        <div 
                          class="progress-bar active" 
                          role="progressbar" 
                          aria-valuemin="0" 
                          aria-valuemax="100" 
                          aria-valuenow="0"
                          style="width: 0%;"
                          data-dz-uploadprogress
                        ></div>
                      </div>
                      <div data-dz-uploadprogress-count>0%</div>
                    </div>

                    <%# Error message %>
                    <div class="small text-danger" data-dz-errormessage></div>
                  </div>
                </div>
                
                <%# Buttons %>
                <div>
                  <button 
                    data-dz-remove 
                    class="btn btn-negative cancel"
                    data-toggle="tooltip"
                    title="Cancel"
                  >
                    <i class="fas fa-times text-danger"></i>
                  </button>
                  <%# <button 
                      data-dz-remove 
                      class="btn btn-negative delete"
                      data-toggle="tooltip"
                      title="Remove"
                    >
                    <i class="fas fa-trash-alt text-danger"></i>
                  </button> %>
                </div>
              </div>

          </div>
        </div>

      </div>
      <div class="modal-footer d-flex align-items-center justify-content-between">
        <div class="row flex-grow-1">
          <div class="col-lg-6 mb-0">
            <div class="d-flex align-items-center" id="total_progress_container" style="display: none">
              <div class="progress flex-grow-1 mr-2">
                <div 
                  class="progress-bar progress-bar-striped progress-bar-animated bg-warning active" 
                  role="progressbar" 
                  aria-valuemin="0" 
                  aria-valuemax="100" 
                  aria-valuenow="0"
                  style="width: 0%;"
                  id="total_progress"
                ></div>
              </div>
              <div id="total_progress_count">0.00%</div>
            </div>
          </div>
        </div>
        <div>
          <button 
            type="button" 
            class="btn btn-negative" 
            data-dismiss="modal"
          >Cancel</button>
          <button 
            type="submit" 
            class="btn btn-success"
            id="startUpload_btn"
          >
            <i class="fas fa-upload fa-fw mr-1"></i>
            <span>Start Upload</span>
          </button>
        </div>
      </div>
    </form>
  </div>
</div>