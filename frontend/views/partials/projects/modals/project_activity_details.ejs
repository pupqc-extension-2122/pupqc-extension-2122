<%# Project Activity Details Modal %>
<div class="modal fade" id="projectActivityDetails_modal">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">
          <i class="fas fa-list fa-fw mr-1"></i>
          <span>Project Activity Details</span>
        </h4>
        <button type="button" class="btn btn-sm btn-negative" data-dismiss="modal" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="modal-body">

        <%# Activity Details Loader %>
        <div id="projectActivityDetails_loader">
          <div class="skeleton h4" style="width: 50%"></div>
          <div class="skeleton h4" style="width: 30%"></div>
          <div class="skeleton text mt-3" style="width: 25%"></div>
          <div class="skeleton p"></div>
          <div class="p-3 my-5"></div>
        </div>

        <%# Activity Details %>
        <div id="projectActivityDetails" style="display: none;">
          <h4 id="projectActivityDetails_title"></h4>
          
          <%# Nav tabs %>
          <ul class="nav nav-pills mb-2" id="projectActivityDetails_tabs" role="tablist" style="display: none">
            <li class="nav-item" role="presentation">
              <a 
                class="nav-link active" 
                id="projecr" 
                data-toggle="tab" 
                href="#projectActivityDetails_details_pane" 
                role="tab" 
                aria-controls="projectActivityDetails_details_pane" 
                aria-selected="true"
              >Details</a>
            </li>

            <div class="nav-item pl-1"></div>

            <li class="nav-item" role="presentation">
              <a 
                class="nav-link" 
                id="projectActivityDetails_postEvaluation_tab" 
                data-toggle="tab" 
                href="#projectActivityDetails_postEvaluation_pane" 
                role="tab" 
                aria-controls="projectActivityDetails_postEvaluation_pane" 
                aria-selected="false"
              >Post Evaluation</a>
            </li>
          </ul>

          <%# Tab panes %>
          <div class="tab-content" id="projectActivityDetails_panes">
            
            <%# Details %>
            <div 
              class="tab-pane active" 
              id="projectActivityDetails_details_pane" 
              role="tabpanel" 
              aria-labelledby="projecr"
            >
              <div class="row">
    
                <div class="col-12">
                  <hr class="my-2">
                </div>
    
                <%# Topics %>
                <dt class="col-md-2">
                  <div class="mx-2">Topics</div>
                </dt>
                <dd class="col-md-10">
                  <div class="mx-2" id="projectActivityDetails_topics"></div>
                </dd>
    
                <div class="col-12">
                  <hr class="my-2">
                </div>
    
                <%# Outcomes %>
                <dt class="col-md-2">
                  <div class="mx-2">Outcomes</div>
                </dt>
                <dd class="col-md-10">
                  <div class="mx-2" id="projectActivityDetails_outcomes"></div>
                </dd>
    
                <div class="col-12">
                  <hr class="my-2">
                </div>
    
                <%# Timeframe %>
                <dt class="col-md-2">
                  <div class="mx-2">Time Frame</div>
                </dt>
                <dd class="col-md-10">
                  <div class="mx-2" id="projectActivityDetails_timeframe"></div>
                </dd>
    
                <div class="col-12">
                  <hr class="my-2">
                </div>
    
                <%# Summary/Details %>
                <dt class="col-md-2">
                  <div class="mx-2">Summary / Details</div>
                </dt>
                <dd class="col-md-10">
                  <div class="mx-2" id="projectActivityDetails_details"></div>
                </dd>
    
                <div class="col-12">
                  <hr class="my-2">
                </div>
              </div>
            </div>

            <%# Activity Evaluation Grade %>
            <div 
              class="tab-pane" 
              id="projectActivityDetails_postEvaluation_pane" 
              role="tabpanel" 
              aria-labelledby="projectActivityDetails_postEvaluation_tab"
            >
              <div class="table-responsive">
                <table class="table table-bordered">
                  <thead>
                    <th width="90%" class="align-middle">Criteria</th>
                    <th width="10%" class="align-middle text-right">Rate</th>
                  </thead>
                  <tbody>
                    <tr>
                      <td colspan="2" class="font-weight-bold" style="background: #f6f6f6">Speaker</td>
                    </tr>
                    <% for( let index = 0; index < 5; index++ ) { %>
                      <tr>
                        <td>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Debitis quasi eligendi ad quos quisquam quia eaque placeat, voluptas corporis accusamus! Aliquid doloribus maiores ea neque?</td>
                        <td class="text-right">2.5</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-negative" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>